
@{
    ViewBag.Title = "Upload HTML Banner";
}

<h2>Upload and delete html banners</h2>


<div class="col-md-4 col-md-offset-4">
    <form name="deleteform" id="deleteform" class="form-group">
        <div class="form-group">
            <label class="text-info">Banner ID</label>
            <input type="number" id="deleteID" class="form-control" />
        </div>
        <button type="submit" class="btn btn-default">Delete Banner</button>
    </form>
</div>


<div class="col-md-6 col-md-offset-3">
    <form name="postform" id="postform" class="form-horizontal">
        <div class="form-group">
            <label class="text-info">Banner ID</label>
            <input type="number" id="postID" class="form-control" />
        </div>
        <div class="form-group">
            <label class="text-info">New HTML banner</label>
            <textarea id="htmlInput" class="form-control" rows="25"></textarea>
        </div>
        <button type="submit" class="btn btn-default">Upload</button>
    </form>
</div>


